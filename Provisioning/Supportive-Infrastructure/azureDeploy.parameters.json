{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "inputObject": {
            "value": {
                "AutomationAccount": {
                    "resourceName": "AA-DSC-Prod",
                    "location": "westus",
                    "tags": {
                        "costcenter": "001",
                        "application": "DSC",
                        "owner": "bittahcriminal"
                    },
                    "properties": {
                        "sku": {
                            "name": "Basic"
                        }
                    }
                },
                "Keyvault":{
                    "resourceName": "KV-DSC-Prod",
                    "location":"westus",
                    "tags":{
                        "costcenter": "001",
                        "application": "DSC",
                        "owner": "bittahcriminal"
                    },
                    "Properties":{
                        "enabledForDeployment": true,
                        "enabledForTemplateDeployment": true,
                        "enabledForDiskEncryption": true,
                        "createMode": "default",
                        "enablePurgeProtection": true,
                        "enableSoftDelete": true,
                        "tenantId":"[variables('tenantId')]",
                        "accessPolicies": [
                            {
                                "objectId": "[reference(resourceId('Microsoft.Automation/automationAccounts',parameters('inputObject').AutomationAccount.resourceName), variables('automationAccountAPIVersion') , 'full').identity.principalId]",
                                "permissions": {
                                    "secrets": [
                                        "Get"
                                    ]
                                },
                                "tenantId":"[variables('tenantId')]"
                            }
                        ],
                        "sku": {
                            "name": "standard",
                            "family": "A"
                        }
                    }
                },
                "VirtualNetwork": {
                    "resourceName": "VNET-Production",
                    "location":"westus",
                    "tags":{
                        "costcenter": "001",
                        "application": "Shared",
                        "owner": "bittahcriminal"
                    },
                    "properties":{
                        "addressSpace": {
                            "addressPrefixes": [
                                "10.0.0.0/23"
                            ]
                        },
                        "subnets": [
                            {
                                "name": "Mgmt-Subnet",
                                "properties": {
                                    "addressPrefix": "10.0.0.0/24"
                                }
                            },
                            {
                                "name": "Customer-Subnet",
                                "properties": {
                                    "addressPrefix": "10.0.1.0/24"
                                }
                            }
                        ]
        
                    }
                }
            }
        }
    }
}