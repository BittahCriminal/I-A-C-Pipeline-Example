{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "inputObject": {
            "type": "object"
        }
    },
    "functions": [],
    "variables": {
        "tenantId":"[subscription().tenantId]",
        "automationAccountAPIVersion":"2020-01-13-preview"
    },
    "resources": [
        {
            "name": "[parameters('inputObject').AutomationAccount.resourceName]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "[variables('automationAccountAPIVersion')]",
            "location": "[parameters('inputObject').AutomationAccount.location]",
            "tags": "[parameters('inputObject').AutomationAccount.tags]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": "[parameters('inputObject').AutomationAccount.properties]",
            "dependson":[
                "keyvaultCopy"
            ]
        },
        {
            "name": "[parameters('inputObject').KeyVault.resourceName]",
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "location": "[parameters('inputObject').KeyVault.location]",
            "copy":{
                "name": "keyvaultCopy",
                "count": 1,
                "mode": "parallel"
            },
            "tags": "[parameters('inputObject').KeyVault.tags]",
            "properties": "[parameters('inputObject').KeyVault.properties]",
            "resources": [
                {
                    "type": "secrets",
                    "name": "keyVaultSecret1",
                    "apiVersion": "2016-10-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.KeyVault/vaults', 'keyVault1')]"
                    ],
                    "properties": {
                        "value": "secretValue"
                    }
                }
            ]
        },
        {
            "name": "[parameters('inputObject').VirtualNetwork.resourceName]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[parameters('inputObject').VirtualNetwork.location]",
            "tags":"[parameters('inputObject').VirtualNetwork.tags]",
            "properties": "[parameters('inputObject').VirtualNetwork.properties]"
        }
    ],
    "outputs": {
        "AutomationAccountManagedIdentity": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Automation/automationAccounts',parameters('inputObject').AutomationAccount.resourceName), variables('automationAccountAPIVersion') , 'full').identity.principalId]"
        }
    }
}